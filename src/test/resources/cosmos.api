# this is an example of the Uber API
# as a demonstration of an API spec in YAML
swagger: '2.0'
info:
  title: Cosmos API
  description: Network topology API
  version: "1"
# the domain of the service
host: topology.livingobjects.com
# array of all schemes that your API supports
schemes:
  - http
# will be prefixed to all paths
basePath: /topology
produces:
  - application/json
paths:
  /domains:
    get:
      summary: Get the list of available Domain
      description: |
        The Domains are the top level logical organisation of the network types.
      security:
        - doormanAuthentication:
          - topology:read
      parameters:
        - name: test
          in: body
          description: The pet JSON you want to post
          schema:
            $ref: '#/definitions/Domain'
          required: true
      responses:
        200:
          description: An array of domains
          schema:
            type: array
            items:
              $ref: Domain
        default:
          description: Unexpected error
          schema:
            $ref: Error

securityDefinitions:
  doormanAuthentication:
    type: apiKey
    name: doorman_token
    in: header

definitions:
  Domain:
    properties:
      id:
        type: number
        description: Unique identifier representing a specific oraganizational domain.
      code:
        type: string
        description: The unique code of the Domain node (used for the tag generation of nodes).
      name:
        type: string
        description: The display name of the Domain.
  Error:
    properties:
      code:
        type: integer
        format: int32
      message:
        type: string
      fields:
        type: string